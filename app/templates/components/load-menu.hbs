<div class="load-menu row fill-viewport">
    <div class="col-md-offset-3 col-md-6 fill-viewport">
        <button class="new-game btn btn-primary" {{action "newGameClicked"}}>
            New Game
        </button>

        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Load Game</h3>
            </div>
            <div class="list-group">
                {{#each game in gameList}}
                    <a href="#" class="list-group-item" {{action "gameListItemClicked" game}}>{{game.name}}</a>
                {{/each}}
            </div>
        </div>
    </div>
</div>
